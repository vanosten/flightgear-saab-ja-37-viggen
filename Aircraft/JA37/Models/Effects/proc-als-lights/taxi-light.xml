<?xml version="1.0"?>

<PropertyList>
  <path>Models/Effects/procedural_light.ac</path>
  
  <light>
      <name>taxi</name>
      <type>spot</type>
      <position>
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>0</z-m>
      </position>
      <direction>
        <x>-1.0</x>
        <y>0</y>
        <z>-0.025</z>
      </direction>
      <ambient>
        <r>0.00</r>
        <g>0.0</g>
        <b>0.0</b>
        <a>1</a>
      </ambient>
      <diffuse>
        <r>0.95</r>
        <g>0.9</g>
        <b>0.9</b>
        <a>1</a>
      </diffuse>
      <specular>
        <r>0.95</r>
        <g>0.9</g>
        <b>0.9</b>
        <a>1</a>
      </specular>
      <attenuation>
        <c>1.0</c>
        <l>0.000000</l>
        <q>0.000000</q>
      </attenuation>
      <spot-exponent>20</spot-exponent>
      <spot-cutoff>35</spot-cutoff>
      <range-m>100</range-m>
  </light>

  <effect>
    <inherits-from>Aircraft/JA37/Models/Effects/proc-als-lights/taxi-light</inherits-from>
    <object-name>procedural_light</object-name>
  </effect>

  <animation>
    <type>select</type>
    <object-name>procedural_light</object-name>
    <object-name>taxi</object-name>
    <condition>
      <property>sim/multiplay/generic/bool[1]</property> <!-- ja37/effect/taxi-light  -->
    </condition>
  </animation>

  <animation>
    <type>dist-scale</type>
    <object-name>procedural_light</object-name>
    <interpolation>
      <entry><ind>0</ind><dep>1.0</dep></entry>
      <entry><ind>2000</ind><dep>8.0</dep></entry>
    </interpolation>
  </animation>
  
  <animation>
    <type>noshadow</type>
    <object-name>procedural_light</object-name>
  </animation>
  
  
</PropertyList>
